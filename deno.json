{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@hyperpolymath/v-deno",
  "version": "0.1.0",
  "license": "AGPL-3.0-or-later",
  "exports": "./src/mod.ts",
  "tasks": {
    "test": "deno test --allow-ffi --allow-read --allow-run",
    "check": "deno check src/mod.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "build:examples": "v -shared examples/*.v"
  },
  "fmt": {
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true
  }
}
